@page
@model Recipendium.UI.Pages.JustRecipeSearchModel
@{
    ViewData["Title"] = "JustRecipeSearch";
}

<div class="text-center">
    <h1 class="display-4">Just Recipe Search</h1>
    <p>Search for recipes and ignore all of the blog posts and stories. Get just the recipes!</p>
</div>

<form method="post">
    <input type="search" name="query" />
    <input type="number" min="10" max="100" step="10" name="limit" value="10"/>
    <button class="btn btn-default">Search</button>
    <br />
    <sub><i>@Model.Message</i></sub>
</form>

<div>
    @if (Model.ResultPages != null)
    {
        @for (int i = 0; i < Model.ResultPages.Count; i++)
        {
          <button class="btn btn-light" type="button" data-bs-toggle="collapse" data-bs-target="#result_@i" aria-expanded="false" aria-controls="result_@i">
            @Model.ResultPages[i].Title
          </button>
          <span class="collapse" id="result_@i">
                    @Html.Raw(@Model.ResultPages[i].Html);
            </span>
            <br />
        }
    }
</div>
